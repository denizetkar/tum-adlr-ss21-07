    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Play",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "play",
                "--ppo-model-path",
                "./checkpoints/recurrent-ppo-curiosity.zip",
                "--device",
                "cuda",
                "--n-envs",
                "4",
                "--env",
                "MountainCarContinuous-v0",
            ],
            "justMyCode": false,
        },
        {
            "name": "Python: Train",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "train",
                "--curiosity-model-path",
                "./checkpoints/curiosity",
                "--ppo-model-path",
                "./checkpoints/ppo",
                "--tensorboard-log",
                "./tensorboard/MountainCarContinuous-v0_curiosity",
                "--device",
                "cuda",
                "--curiosity-epochs",
                "8",
                "--total-timesteps",
                "5000000",
                "--n-steps",
                "2000",
                "--n-envs",
                "8",
                "--rnn-hidden-dim",
                "32",
                "--policy",
                "RnnPolicy",
                "--env",
                "MountainCarContinuous-v0",
                "--use-curiosity",
                "--pure-curiosity-reward",
            ],
            "justMyCode": false,
        },
        {
            "name": "Python: Play Atari",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "play",
                "--atari",
                "--ppo-model-path",
                "./checkpoints/breakout_curiosity_pure/ppo0.zip",
                "--device",
                "cuda",
                "--n-envs",
                "2",
                "--env",
                "BreakoutNoFrameskip-v4",
            ],
            "justMyCode": false,
        },
        {
            "name": "Python: Train Atari",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "train",
                "--atari",
                "--curiosity-model-path",
                "./checkpoints/breakout_curiosity_pure/curiosity",
                "--ppo-model-path",
                "./checkpoints/breakout_curiosity_pure/ppo",
                "--device",
                "cuda",
                "--learning-rate",
                "0.0001",
                "--tensorboard-log",
                "./tensorboard/breakout_curiosity_pure",
                "--curiosity-epochs",
                "8",
                "--total-timesteps",
                "200000000",
                "--n-steps",
                "128",
                "--n-envs",
                "64",
                "--rnn-hidden-dim",
                "32",
                "--policy",
                "CnnPolicy",
                "--env",
                "BreakoutNoFrameskip-v4",
                "--use-curiosity",
                "--pure-curiosity-reward",
            ],
            "justMyCode": false,
        }
    ]
}